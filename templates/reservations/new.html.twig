{% extends "base.html.twig" %}

{% block body %}
  <div class="block-content d-flex">
    <img src="{{ asset('build/images/icon-add-reservation.svg') }}" alt="icon add reservation" class="title-icon">
    <h1>Ajout d'une r√©servation</h1>
  </div>
  <div class="block-content form-block">
    {{ form_start(form) }}
      {{ form_row(form.startAt) }}
      {{ form_row(form.endAt) }}
      <div class="d-flex justify-content-between align-items-center">
        {{ form_row(form.clientFirstname) }}
        {{ form_row(form.clientLastname) }}
      </div>
      <div class="d-flex justify-content-between align-items-center">
        {{ form_row(form.nbOfPersons) }}
        {{ form_row(form.price) }}
      </div>
      {{ form_rest(form) }}
    {{ form_end(form) }}
  </div>
{% endblock %}