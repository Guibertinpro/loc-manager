{% extends "base.html.twig" %}

{% block body %}
  <div class="block-title d-flex justify-content-between align-items-center">
    <h1><i class="fa-solid fa-user clr-black me-3"></i>Clients</h1>
    <a href="{{ path('app_client_new') }}" class="m-0 h3 btn btn-primary d-flex align-items-center"><i class="fa-solid fa-circle-plus me-2"></i>Ajouter</a>
  </div>
  <div class="block-content">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Numéro</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          {% for client in clients %}
            <tr>
              <td>{{ client.id }}</td>
              <td>{{ client.firstname }} {{ client.lastname }}</td>
              <td>{{ client.email }}</td>
              <td>{{ client.phone }}</td>
              <td>
                <a href="{{ path('app_client_view', {'id': client.id}) }}" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-magnifying-glass-plus"></i></a>
                <a href="{{ path('app_client_update', {'id': client.id}) }}" class="btn btn-sm btn-outline-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="{{ path('app_client_delete', {'id': client.id}) }}" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}