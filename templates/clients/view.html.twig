{% extends "base.html.twig" %}

{% block body %}
  <div class="block-title d-flex justify-content-between align-items-center">
    <h1><i class="fa-solid fa-bed clr-black me-3"></i>Client n°{{ client.id }}</h1>
    <a href="{{ path('app_client_update', {'id': client.id}) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square btn-title-icon me-2"></i>Modifier</a>
  </div>
  <div class="block-content">
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h2 class="mb-3">Informations client</h2>
            <div class="card-text block-client-client">
              <p class="m-2">{{ client.firstname }} {{ client.lastname }}</p>
              <p class="m-2"><a class="link" href="mailto:{{ client.email }}">{{ client.email }}</a></p>
              <p class="m-2">{{ client.phone }}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h2 class="mb-3">Réservations du client</h2>
            <div class="card-text block-details-client">
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}